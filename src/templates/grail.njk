{% set site_title = "ARRL Minnesota Section" %}
{% set page_title = page_title | default(null) %}
{% set composite_title %}
    {{ page_title + ' - ' + site_title if page_title else site_title }}
{% endset %}

<!doctype html>
<html>
  <head>
    <title>{{composite_title}}</title>
    <link href="/styles/index.css" rel="stylesheet">
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <header class="bg-indigo-500 font-bold text-white p-5">
      <div class="grid grid-cols-7 gap-4 flex-wrap justify-items-center md:justify-items-start">
        <div class="col-span-7 md:col-span-3 content-center">
		    <a href="/">
				<h1 class="md:text-4xl text-2xl">{{ site_title }}</h1>
		    </a>
        </div>
        <div class="collapse md:col-span-1"></div>
		<div class="md:col-span-3 col-span-7 content-center flex md:gap-4 gap-4">
			<div class="flex-auto content-center">
				<a href="/about/">
				About
				</a>
			</div>
			<div class="flex-auto content-center">
				<a href="/clubs/">
					Clubs
				</a>
			</div>
			<div class="flex-auto content-center">
				<a href="/repeaters/">
					Repeaters
				</a>		
			</div>
			<div class="flex-auto content-center">
				<a href="/resources/">
					Resources
				</a>		
			</div>
			<div class="flex-auto content-center">
				<a href="/events/">
					Events
				</a>
			</div>
			<div class="flex-auto content-center">
				<a href="/news/">
					News
				</a>
			</div>
		</div>
      </div>
    </header>
	<div class="flex bg-indigo-700 min-h-2"></div>
	<div class="flex bg-emerald-700 min-h-2"></div>
	<div class="flex bg-emerald-600 min-h-2"></div>
	<div class="flex bg-emerald-500 min-h-2"></div>
    <main>
		<div>
			{% block header %}
				<div class="gap-4 justify-center text-center">
				<h2 class="text-3xl font-bold text-indigo-800 md:mt-6 mt-4 md:mb-4 mb-4">
					{{title}}
				</h2>
			{% endblock %}

			<div class="grid grid-cols-6 md:gap-4 gap-2">
				<div class="md:col-span-1 col-span-6">
					{% block left_sidebar %}
					{% endblock %}
				</div>
				<div class="md:col-span-4 col-span-6 p-2 md:p-0 flex justify-center">
					{% block content %}
					{% endblock %}
				</div>
				<div class="md:col-span-1">
					{% block right_sidebar %}
					{% endblock %}
				</diV>
			</div>
		</div>
    </main>
	<footer class="mb-20">
		{% block footer %}
		{% endblock %}
	</footer>
	<script>
		{% block scripts %}{% endblock %}
	</script>
  </body>
</html>
