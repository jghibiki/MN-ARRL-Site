{% set site_title = "ARRL Minnesota Section" %}
{% set page_title = page_title | default(null) %}
{% set composite_title %}
    {{ page_title + ' - ' + site_title if page_title else site_title }}
{% endset %}

<!doctype html>
<html>
  <head>
    <title>{{composite_title}}</title>
    <link href="/styles/index.css" rel="stylesheet">
  </head>
  <body>
    <header class="bg-indigo-500 font-bold text-white p-5">
      <div class="flex gap-4">
        <div class="flex-none content-center">
		    <a href="/">
				<h1 class="text-4xl">{{ site_title }}</h1>
		    </a>
        </div>
        <div class="flex-auto"></div>
        <div class="flex-none content-center">
			<a href="/about/">
			About
			</a>
		</div>
        <div class="flex-none content-center">
			<a href="/clubs/">
				Clubs
			</a>
		</div>
        <div class="flex-none content-center">
			<a href="/resources/">
				Resources
			</a>		
		</div>
        <div class="flex-none content-center">
			<a href="/events/">
				Events
			</a>
		</div>
        <div class="flex-none content-center">
			<a href="/news/">
				News
			</a>
		</div>
      </div>
    </header>
	<div class="flex bg-indigo-700 min-h-2"></div>
	<div class="flex bg-emerald-700 min-h-2"></div>
	<div class="flex bg-emerald-600 min-h-2"></div>
	<div class="flex bg-emerald-500 min-h-2"></div>
    <main>
		<div>
			{% block header %}
			{% endblock %}

			<div class="grid grid-cols-6 gap-4">
				<div class="col-span-1">
					{% block left_sidebar %}
					{% endblock %}
				</diV>
				<div class="col-span-4 flex justyfy-center">
					{% block content %}
					{% endblock %}
				</div>
				<div class="col-span-1">
					{% block right_sidebar %}
					{% endblock %}
				</diV>
			</div>
		</div>
    </main>
  </body>
</html>
